<GenBCScreen>:
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                size: self.size
                pos: self.pos
        ScrollView:
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                padding: [20, 20, 20, 20]
                spacing: 10

                Button:
                    id: go_back_button
                    text: "<< Go Back"
                    size_hint: None, None
                    height: 40
                    width: 150
                    pos_hint: {'x': 0, 'top': 1}
                    background_color: (1, 1, 1, 1)
                    color: 39/255, 65/255, 245/255, 0.8
                    bold: True
                    background_normal: ''
                    on_press: root.go_back()

                Label:
                    text: 'Buffer Capacity Screen'
                    font_size: 50
                    color: 0.1, 0.1, 0.1, 1
                    size_hint_y: None
                    height: self.texture_size[1]
                    bold: True
                    halign: 'center'
                    valign: 'middle'

                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: 40
                    spacing: 10

                    Label:
                        text: 'Trim Begin:'
                        font_size: 20
                        bold: True
                        color: 0.1, 0.1, 0.1, 1
                        size_hint_x: 0.3

                    TextInput:
                        id: trim_beg_input
                        text: root.collected_data.get("trim_beg", "") if root.collected_data is not None else ""
                        multiline: False
                        input_filter: 'float'
                        font_size: 20
                        size_hint_x: 0.5
                        on_text: root.on_trim_beg_input(self, self.text)

                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: 40
                    spacing: 10

                    Label:
                        text: 'Trim End:'
                        font_size: 20
                        bold: True
                        color: 0.1, 0.1, 0.1, 1
                        size_hint_x: 0.3

                    TextInput:
                        id: trim_end_input
                        text: root.collected_data.get("trim_end", "") if root.collected_data is not None else ""
                        multiline: False
                        input_filter: 'float'
                        font_size: 20
                        size_hint_x: 0.5
                        on_text: root.on_trim_end_input(self, self.text)

                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: 40
                    spacing: 10

                    Label:
                        text: 'Electrode Shift +/- 0.5:'
                        font_size: 20
                        bold: True
                        color: 0.1, 0.1, 0.1, 1
                        size_hint_x: 0.3

                    TextInput:
                        id: electrode_shift_input
                        text: "0"
                        multiline: False
                        input_filter: 'float'
                        font_size: 20
                        size_hint_x: 0.5
                        on_text: root.on_electrode_shift_input(self, self.text)

                Button:
                    text: "Model BC Curve"
                    size_hint: 1, None
                    height: 40
                    bold: True
                    background_normal: ''
                    background_color: 0.05, 0.53, 0.11, 1
                    color: 1, 1, 1, 1
                    on_release: root.on_model_bc_button_click(self)

                FloatLayout:
                    id: chart_layout
                    size_hint_y: None
                    height: dp(400)
                    pos_hint: {'center_x': 0.5, 'top': 0.7}
